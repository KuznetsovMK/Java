<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="com.geekbrais.chat.client.Controller"
      xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <HBox fx:id="loginPanel">
        <TextField fx:id="usernameField" HBox.hgrow="ALWAYS" promptText="Enter nickname"
                   onAction="#login">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" top="5.0"/>
            </HBox.margin>
        </TextField>
        <Button maxWidth="116.0" minWidth="80.0" mnemonicParsing="false" prefHeight="25.0"
                prefWidth="116.0" text="Login" HBox.hgrow="ALWAYS" onAction="#login">
            <HBox.margin>
                <Insets bottom="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </Button>
    </HBox>
    <TextArea fx:id="mainTextArea" editable="false" VBox.vgrow="ALWAYS"/>
    <HBox fx:id="msgPanel" visible="false" managed="false">
        <TextField fx:id="bottomTextField" HBox.hgrow="ALWAYS" promptText="Enter the text"
                   onAction="#sendMsg">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" top="5.0"/>
            </HBox.margin>
        </TextField>
        <Button maxWidth="116.0" minWidth="80.0" mnemonicParsing="false" prefHeight="25.0"
                prefWidth="116.0" text="Send" HBox.hgrow="ALWAYS" onAction="#sendMsg">
            <HBox.margin>
                <Insets bottom="5.0" right="5.0" top="5.0"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
